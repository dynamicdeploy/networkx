@model List<PracticalNeo4j_DotNet.Models.User>
@{
    Layout = "~/Views/_App.cshtml";
}
@{
    ViewBag.Title = "Friends";
}

<h3>Social Graph - Friends</h3>
<p>This section of the application shows how to search for, add and remove friends from the user's networks.</p>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            @Html.Partial("~/Views/Global/social-nav.cshtml")
        </div>
        <div class="col-md-6">
            <h3>Search For Friends</h3>
            <form class="form-horizontal" id="socialfriendsearchform">
                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="text" class="form-control input-lg" id="username" name="username" placeholder="Search by Username" value="" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        <button type="submit" id="socialfriendsearch" class="btn btn-default">Search</button>
                    </div>
                </div>
            </form>
            <table class="table" id="userstoadd"></table>
        </div>
        <div class="col-md-3">
            <h3>Current Friends</h3>
            <table class="table" id="following">
               @foreach(PracticalNeo4j_DotNet.Models.User user in ViewBag.following){
               <tr><td>@user.firstname @user.lastname</td><td><a href="#" id="@user.username" class="removefriend">Remove</a></td></tr>
               }
               @if(ViewBag.following.Count == 0){
                <tr><td> No friends :(</td></tr>
               }
            </table>
        </div>
    </div>
</div>
